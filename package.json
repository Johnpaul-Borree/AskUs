{
  "name": "askus",
  "version": "1.0.0",
  "description": "API section for askus",
  "main": "server.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/server.js",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "test": "nyc --reporter=html --reporter=text mocha --require babel-core/register --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Johnpaul-Borree/AskUs.git"
  },
  "author": "Johnpaul Attamah",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Johnpaul-Borree/AskUs/issues"
  },
  "homepage": "https://github.com/Johnpaul-Borree/AskUs#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2"
  },
  "dependencies": {
    "express": "^4.16.3",
    "joi": "^13.6.0"
  },
  "engines": {
    "node": "8.11.3"
  }
}
